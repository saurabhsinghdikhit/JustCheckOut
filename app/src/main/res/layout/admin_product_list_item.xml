<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="50dp"
        android:id="@+id/admin_list_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:elevation="0dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/pinned_item"
            android:layout_margin="20dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_pin_light"
            android:tooltipText="@string/pin_text"
            android:contentDescription="TODO" />
        <ImageView
            android:id="@+id/delete_item"
            android:layout_margin="20dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_delete"
            android:tooltipText="@string/pin_text"
            android:contentDescription="TODO" />
        <LinearLayout
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:elevation="0dp"
                app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/admin_product_list_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/crop_top"
                android:contentDescription="TODO" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/admin_product_list_name"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/white_crop_top"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/size"/>
                    <TextView
                        android:id="@+id/admin_product_list_size"
                        android:layout_marginLeft="5dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/size_m"/>
                </LinearLayout>
                <TextView
                    android:gravity="left|center"
                    android:drawablePadding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableTint="@color/orange"
                    android:drawableLeft="@drawable/dollar"
                    android:text="@string/crop_top_price"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>