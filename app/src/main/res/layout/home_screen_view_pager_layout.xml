<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:id="@+id/roundCardView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:elevation="0dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/topPickImage"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome1"
            android:contentDescription="TODO" />
        <ImageView
            android:id="@+id/topPickCart"
            android:layout_margin="20dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_heart"
            android:contentDescription="TODO" />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="-50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/topPickName"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/white_crop_top"/>
        <TextView
            android:id="@+id/topPickPrice"
            android:gravity="left|center"
            android:drawablePadding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawableTint="@color/orange"
            android:drawableLeft="@drawable/dollar"
            android:text="@string/crop_top_price"/>
    </LinearLayout>
</LinearLayout>