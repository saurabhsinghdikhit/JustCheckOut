<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/most_popular_layout"
        android:gravity="center"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:layout_width="260dp"
        android:layout_height="100dp">
        <androidx.cardview.widget.CardView
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="0dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/most_popular_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/bag"
                android:contentDescription="TODO" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="100dp"
            android:gravity="left|center"
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="100dp">
            <TextView
                android:textAllCaps="true"
                android:id="@+id/most_popular_name"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/white_crop_top"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/most_popular_price"
                    android:gravity="left|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableTint="@color/orange"
                    android:drawableLeft="@drawable/dollar"
                    android:text="@string/crop_top_price"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/mostPopularCart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_heart"
                    app:tint="@color/black"
                    android:contentDescription="TODO" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>